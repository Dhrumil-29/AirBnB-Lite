<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h2 class="mt-1">Create New List</h2>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title" class="form-label">Title</label>
        <input
          class="form-control"
          type="text"
          name="listing[title]"
          placeholder="Enter Title"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter a title.</div>
      </div>

      <div class="form-group">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          cols="30"
          rows="5"
          class="form-control"
          placeholder="Enter Description"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter a description.</div>
      </div>

      <div class="form-group">
        <label for="link" for="image" 
        class="form-label">Upload Listing Image</label>
        <input
          type="file"
          class="form-control"
          name="listing[image][url]"
        />
      </div>

      <div class="row">
        <div class="form-group col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            min="0"
            
            class="form-control"
            name="listing[price]"
            placeholder="Enter Price"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please Enter a price.</div>
        </div>
        <div class="form-group col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            class="form-control"
            name="listing[location]"
            placeholder="Enter Location"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please Enter a Location.</div>
        </div>
      </div>
      <div class="form-group">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          class="form-control"
          name="listing[country]"
          placeholder="Enter Country"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter a Country.</div>
      </div>

      <button class="btn btn-primary">Add</button>
    </form>
  </div>
</div>
